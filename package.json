{
  "name": "fieldwork",
  "description": "feasibility study",
  "version": "0.9.17",
  "author": "Shin Ogata",
  "bugs": {
    "url": "https://github.com/Shin-Ogata/fieldwork/issues"
  },
  "devDependencies": {
    "@cdp/tasks": "file:packages/tool/tasks",
    "@rollup/plugin-alias": "5.0.0",
    "@rollup/plugin-commonjs": "25.0.4",
    "@rollup/plugin-multi-entry": "6.0.0",
    "@rollup/plugin-node-resolve": "15.2.1",
    "@rollup/plugin-replace": "5.0.2",
    "@types/jasmine": "4.3.5",
    "@types/node": "20.5.7",
    "@typescript-eslint/eslint-plugin": "6.5.0",
    "@typescript-eslint/parser": "6.5.0",
    "autoprefixer": "10.4.15",
    "commander": "11.0.0",
    "convert-source-map": "2.0.0",
    "cross-conf-env": "1.3.0",
    "csso": "5.0.5",
    "dts-bundle-generator": "8.0.1",
    "es6-plato": "git+https://github.com/the-simian/es6-plato.git",
    "eslint": "8.48.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "glob": "10.3.3",
    "html-minifier": "4.0.0",
    "http-server": "14.1.1",
    "jasmine": "5.1.0",
    "jasmine-core": "5.1.1",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "postcss": "8.4.28",
    "postcss-cli": "10.1.0",
    "requirejs": "2.3.6",
    "rollup": "3.28.1",
    "rollup-plugin-import-css": "3.3.1",
    "sass": "1.66.1",
    "semver": "7.5.4",
    "tar": "6.1.15",
    "terser": "5.19.2",
    "testem": "3.10.1",
    "typedoc": "0.25.0",
    "typescript": "5.2.2"
  },
  "homepage": "https://github.com/Shin-Ogata/fieldwork#readme",
  "keywords": [
    "C++",
    "TypeScript",
    "feasibility",
    "javascript"
  ],
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shin-Ogata/fieldwork.git"
  },
  "scripts": {
    "check-update": "cdp-task delegate check-update --exists && npm outdated || exit 0",
    "clean:doc": "cdp-task clean -d",
    "clean:doc:a": "cdp-task clean -t ./docs/typedoc",
    "clean:doc:c": "cdp-task clean -t ./docs/reports/coverage",
    "clean:doc:m": "cdp-task clean -t ./docs/reports/metrics",
    "install:all": "npm ci --legacy-peer-deps && npm run install:packages",
    "install:packages": "cdp-task delegate install --preset -- --no-save --no-audit --no-bin-links --no-optional --no-update-notifier --no-package-lock --legacy-peer-deps --loglevel=error --progress=false",
    "install:sdk": "npm i --legacy-peer-deps",
    "lint": "cdp-task delegate lint --exists",
    "metrics": "run-p metrics:*",
    "metrics:file": "cdp-task metrics -r file -l ./config/lint/eslint.js -p lib",
    "metrics:module": "cdp-task metrics -r module -l ./config/lint/eslint.js -p lib,framework,extension",
    "packages:ci": "cdp-task delegate ci -l lib,framework,extension",
    "packages:clean": "cdp-task delegate clean -l lib,framework,extension",
    "packages:clear": "cdp-task delegate clear",
    "packages:depends": "cdp-task delegate ls --preset --dry-run --silent",
    "set-version": "cross-conf-env cdp-task delegate set-version -l tool,lib,framework,extension -- npm_package_version",
    "set-version:to": "cdp-task delegate set-version -l tool,lib,framework,extension --",
    "test": "run-s packages:ci metrics"
  }
}
